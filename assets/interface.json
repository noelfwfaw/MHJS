{
    "interface_version": 2,
    "name": "MaaXXX",
    "description": "这是一个使用 MaaFramework 创建的风之痕迹PC端猎金脚本。",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 MHJS!",
    "github": "https://github.com/noelfwfaw/MHJS.git",
    "version": "0.0.1",
    "controller": [
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Visual Studio",
                "screencap": "PrintWindow",
                "mouse": "PostMessageWithCursorPos",
                "keyboard": "PostMessageWithCursorPos"
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    "task": [
        {
            "name": "猎金",
            "entry": "初始化",
            "doc": "需切到战斗列表，筛选好天使，并勾选筛选，然后启动脚本。"
        }
    ]
}